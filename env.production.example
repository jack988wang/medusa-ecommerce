# 应用配置
NODE_ENV=production
PORT=9000

# 安全密钥（生产环境必须修改）
JWT_SECRET=your-jwt-secret-32-chars
COOKIE_SECRET=your-cookie-secret-32-chars
ENCRYPTION_KEY=your-encryption-key-32-chars

# 数据库配置
DATABASE_URL=postgresql://user:password@host:port/database
REDIS_URL=redis://host:port
POSTGRES_PASSWORD=your-postgres-password

# 域名配置
MEDUSA_BACKEND_URL=https://your-backend-domain.com
MEDUSA_ADMIN_CORS=https://your-frontend-domain.com
MEDUSA_STORE_CORS=https://your-frontend-domain.com

# 前端配置
NEXT_PUBLIC_API_URL=https://your-backend-domain.com
NEXT_PUBLIC_APP_URL=https://your-frontend-domain.com
NEXT_PUBLIC_STRIPE_KEY=pk_live_...
NEXT_PUBLIC_APP_NAME=Medusa Store

# 邮件配置
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# 支付网关配置
PAYMENT_GATEWAY=mock
PAYMENT_SECRET_KEY=your-payment-secret-key
PAYMENT_NOTIFY_URL=https://your-backend-domain.com/api/payment/notify
PAYMENT_RETURN_URL=https://your-backend-domain.com/api/payment/return

# Stripe配置（可选）
STRIPE_PUBLIC_KEY=pk_live_...
STRIPE_SECRET_KEY=sk_live_...
STRIPE_WEBHOOK_SECRET=whsec_...
